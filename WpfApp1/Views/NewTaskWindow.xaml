<Window x:Class="TaskTurner.Views.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTurner.Views" xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        PreviewMouseDown="Window_PreviewMouseDown"
        Title="NewTaskWindow" Height="450" Width="400">
    <Grid>
        <Rectangle Fill="{StaticResource TaskListBackground}"/>
        <Grid Margin="20 10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <!--Title and ImportanceBadge-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <!--Title-->
                <Grid Grid.Row="0" Grid.Column="0">
                    <TextBox x:Name="InputTitleBox" 
                    Style="{StaticResource TaskListSearchBox}">

                    </TextBox>
                    <Label Content="Input task's name" Grid.Column="0"
                       Style="{StaticResource LabelForTextBox}"
                           VerticalAlignment="Center"
                       Visibility="{Binding Text.IsEmpty, ElementName=InputTitleBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1">
                    <!--Importance ComboBox-->
                    <Button Content="Choose Importance"
                            Name="ImportanceToggleButton"
                            Click="ImportanceToggleButton_Click"
                            Grid.Column="1" Margin="7 0 0 0"
                            Style="{StaticResource ButtonOfImportnace}"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <!--Description-->
                <Grid Grid.Row="1" Margin="0 10">
                    <TextBox x:Name="DescriptionTextBox"
                             Style="{StaticResource DescriptionTextBox}"/>
                    <Label Content="Input a discription for the task"
                           Style="{StaticResource LabelForTextBox}"
                           Padding="0 10"
                           Visibility="{Binding Text.IsEmpty, ElementName=DescriptionTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
                <!--StackPanel-->
                <Grid Height="71" Width="125" Margin="0 5 0 0" VerticalAlignment="Top" HorizontalAlignment="Right"
                      x:Name="ImportancePanelContainer" Visibility="Collapsed">
                    <Polygon Fill="{StaticResource AccentDarkPolygon}" StrokeThickness="1" Stroke="#FFF9EACE"
                             Points="0,5,
                             0, 71
                             125, 71
                             125, 5
                             67.5, 5
                             62.5, 0
                             57.5, 5"/>
                    <StackPanel Orientation="Vertical" Margin="1 6 1 1">
                        <Button Content="Low" Style="{StaticResource PolygonButtons}" Click="ImportanceButton_Click"/>
                        <Button Content="Medium" Style="{StaticResource PolygonButtons}" Click="ImportanceButton_Click" />
                        <Button Content="High" Style="{StaticResource PolygonButtons}" Click="ImportanceButton_Click" />
                        <Button Content="Critical" Style="{StaticResource PolygonButtons}" Click="ImportanceButton_Click" />
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <!-- Выбор даты -->
                    <DatePicker x:Name="MyDatePicker" Width="120" />

                    <!-- Выбор времени -->
                    <Controls:TimePicker Width="100" Margin="10 0 0 0"
                        />
                </StackPanel>
            </Grid>
            
        </Grid>
    </Grid>
</Window>
