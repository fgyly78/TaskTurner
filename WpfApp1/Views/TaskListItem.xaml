<UserControl x:Class="TaskTurner.Views.TaskListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTurner.Views"
             xmlns:viewmodel="clr-namespace:TaskTurner.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="145" d:DesignWidth="395">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource Title}"
                   Text="{Binding NewTaskTitle}"
                   Grid.Row="0"/>

        <Border HorizontalAlignment="Right"
                Style="{StaticResource ImportanceBadge}"
                Background="{StaticResource Importance-Category}">
            <TextBlock Text="Critical"
                       Foreground="#FFF9EACE"
                       FontSize="13"/>
        </Border>

        <TextBlock Grid.Row="1"
                   Text="Text"
                   Style="{StaticResource DefaulText1}"/>

        <TextBlock Text="Due: 16/04/2025"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Style="{StaticResource DefaulText1}"/>
    </Grid>
</UserControl>
